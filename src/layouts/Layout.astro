---
const {
  title = 'CronoSENA | Programación Académica y Horarios del SENA',
  description = 'CronoSENA es un sistema para gestionar la programación académica y consultar horarios de instructores, fichas y ambientes en centros del SENA.',
  image = 'https://cronosena.com/og-cronosena.png',
  canonical = 'https://cronosena.com/',
  includeFaq = false
} = Astro.props;
---

<!doctype html>
<html lang="es-CO">
  <head>
    <!-- Core -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:locale" content="es_CO" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="CronoSENA" />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebSite",
          "@id": "https://cronosena.com/#website",
          "url": "https://cronosena.com/",
          "name": "CronoSENA",
          "description": "Sistema de programación académica y consulta de horarios del SENA",
          "inLanguage": "es-CO",
          "potentialAction": {
            "@type": "SearchAction",
            "target": "https://cronosena.com/?q={search_term_string}",
            "query-input": "required name=search_term_string"
          }
        },
        {
          "@type": "SoftwareApplication",
          "@id": "https://cronosena.com/#software",
          "name": "CronoSENA",
          "url": "https://cronosena.com/",
          "description": "Sistema para la gestión de programación académica, horarios de instructores, fichas y ambientes del SENA.",
          "applicationCategory": "EducationalApplication",
          "operatingSystem": "Web",
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "COP"
          },
          "author": {
            "@type": "Person",
            "name": "Xenthrall",
            "url": "https://github.com/xenthrall"
          }
        },
        {
          "@type": "Organization",
          "@id": "https://cronosena.com/#organization",
          "name": "CronoSENA",
          "url": "https://cronosena.com/",
          "logo": "https://cronosena.com/logo-192.png",
          "image": "https://cronosena.com/og-cronosena.png",
          "founder": {
            "@type": "Person",
            "name": "Xenthrall",
            "url": "https://github.com/xenthrall"
          }
        }
        ${includeFaq ? `,
        {
          "@type": "FAQPage",
          "@id": "https://cronosena.com/#faq",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "¿Qué es CronoSENA?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "CronoSENA es un sistema para la gestión y planificación académica que permite consultar horarios de instructores, fichas y ambientes en centros del SENA."
              }
            },
            {
              "@type": "Question",
              "name": "¿Puedo instalar CronoSENA con Docker?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Sí. CronoSENA puede desplegarse usando Docker y docker-compose, lo que facilita su instalación y mantenimiento."
              }
            }
          ]
        }` : ``}
      ]
    }
    </script>
  </head>

  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
