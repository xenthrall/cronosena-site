---
import cronosenaLogo from "../assets/cronosena.svg";
import background from "../assets/background.svg";
import logo from "../assets/logo.svg";
import CentroSelector from "../components/CentroSelector.astro";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />

  <section id="links">
    <a class="button" href="https://docs.cronosena.com"
      >Lee nuestra documentación</a
    >
    <a href="https://github.com/xenthrall/CronoSENA">
      GitHub
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path d="m12.301 0h.093c2.242 0 4.34.613 6.137 1.68..."></path>
      </svg>
    </a>
  </section>

  <main>
    <section id="intro" aria-labelledby="intro-title">
      <h1 id="intro-title">
        Programación Académica y Horarios de Instructores SENA con CronoSENA
      </h1>
      <p id="intro-description">
        CronoSENA es un sistema de programación académica diseñado para los
        centros del SENA, que permite gestionar y consultar horarios por
        instructor, ficha y ambiente.
      </p>
    </section>

    <section id="hero">
      <a id="cronosenaLogo-img" href="https://cronosena.com">
        <img
          src={cronosenaLogo.src}
          width="135"
          height="48"
          alt="CronoSENA – Programación Académica y Horarios del SENA"
        />
      </a>
      <CentroSelector />
    </section>
  </main>

  <a
    href="https://docs.cronosena.com/blog"
    id="news"
    class="box"
    aria-labelledby="news-title"
  >
    <img src={logo.src} alt="CronoSENA logo" width="50" height="50" />
    <h2 id="news-title">¿Qué novedades tenemos?</h2>
    <p>
      Te invitamos a seguir nuestro blog donde publicamos noticias y
      actualizaciones sobre CronoSENA.
    </p>
  </a>
</div>

<style>
  /* =========================
     BASE
  ========================== */
  #container {
    position: relative;
    font-family:
      Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
      sans-serif;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  #background {
    position: fixed;
    inset: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(100px);
  }

  main {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 2rem;
  }

  /* =========================
     HERO
  ========================== */
  #hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1em;
    padding: 16px;
    width: 100%;
    z-index: 30;

  }

  /* =========================
     INTRO (DESKTOP)
  ========================== */
  #intro {
    position: absolute;
    bottom: 16px;
    left: 16px;
    max-width: 320px;
    padding: 16px;
    backdrop-filter: blur(50px);
    background: rgba(255, 255, 255, 1);
    border-radius: 16px;
    border: 1px solid white;
    transition: background 0.2s;
  }

  #intro:hover {
    background: rgba(255, 255, 255, 0.55);
  }

  h1 {
    font-size: 22px;
    margin: 0 0 0.5em;
    color: #111827;
  }

  #intro-description {
    color: #4b5563;
    font-size: 16px;
    line-height: 24px;
    margin: 0;
  }

  /* =========================
     LINKS
  ========================== */
  #links {
    position: absolute;
    top: 16px;
    right: 16px;
    display: flex;
    gap: 12px;
    z-index: 10;
  }

  #links a {
    display: flex;
    align-items: center;
    padding: 10px 12px;
    color: #111827;
    text-decoration: none;
  }

  #links a.button {
    color: white;
    background: linear-gradient(83deg, #3245ff, #bc52ee);
    border-radius: 10px;
  }

  /* =========================
     NEWS (DESKTOP)
  ========================== */
  #news {
    position: absolute;
    bottom: 16px;
    right: 16px;
    max-width: 300px;
    padding: 16px;
    backdrop-filter: blur(50px);
    background: white;
    border-radius: 16px;
    border: 1px solid white;
    text-decoration: none;

  }

  /* =========================
     MOBILE OPTIMIZATION
  ========================== */
  @media screen and (max-width: 800px) {
    main {
    margin-top: 50px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    text-align: center;
    gap: 2rem;
  }

    /* Ocultar novedades */
    #cronosenaLogo-img {
      display: none;
    }

    /* Convertir intro en bloque ligero */
    #intro {
      position: static;
      max-width: 100%;
      padding: 0 24px;
      background: transparent;
      backdrop-filter: none;
      border: none;
    }

    #intro-description {
      display: none;
    }

    h1 {
      font-size: 20px;
      line-height: 1.3;
    }

    main {
      padding-top: 64px;
      gap: 1.5rem;
    }
  }

  @media screen and (max-height: 400px) {
    #cronosenaLogo-img,

    #intro-description {
      display: none;
    }
  }
</style>
