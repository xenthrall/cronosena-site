---
const centros = [
  {
    nombre: "CATA - Centro Agroempresarial y Turístico de los Andes (Málaga)",
    url: "https://cata.cronosena.site",
  },

];
---

<div class="selector-container">
  <label for="buscador">Ingresa tu centro de formación:</label>

  <div class="input-group">
    <input
      list="centros"
      id="buscador"
      placeholder="Ej: CATA - Centro Agroempresarial y Turístico de los Andes"
      autocomplete="off"
    />
    <button id="btn-ingreso" disabled>Ingresar</button>
  </div>

  <datalist id="centros">
    {
      centros.map((centro) => (
        <option value={centro.nombre} data-url={centro.url} />
      ))
    }
  </datalist>
</div>

<script>
  const input = document.getElementById("buscador");
  const opciones = document.querySelectorAll("#centros option");
  const btn = document.getElementById("btn-ingreso");

  function getValidOption() {
    const valor = input.value.trim();
    return Array.from(opciones).find((opt) => opt.value === valor);
  }

  input.addEventListener("input", () => {
    const opcion = getValidOption();
    btn.disabled = !opcion;
  });

  btn.addEventListener("click", () => {
    const opcion = getValidOption();
    if (opcion && opcion.dataset.url) {
      window.location.href = opcion.dataset.url;
    } else {
      alert("Por favor selecciona un centro válido.");
    }
  });

  window.addEventListener("load", () => {
    input.value = "";
    btn.disabled = true;
  });
</script>

<style>
  .selector-container {
    margin-top: 1.2em;
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
    max-width: 700px;
  }

  label {
    font-size: 1rem;
    color: #111827;
    font-weight: 500;
  }

  /* --- Layout principal --- */
  .input-group {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 10px;
    width: 100%;
  }

  input {
    flex: 1;
    padding: 12px 14px;
    font-size: 16px;
    border-radius: 10px;
    border: 1px solid #ccc;
    background-color: white;
    color: #111827;
    transition:
      box-shadow 0.2s,
      border 0.2s;
    min-width: 0; /* evita desbordamientos */
  }

  input:hover {
    box-shadow: 0 0 0 2px rgba(50, 69, 255, 0.3);
  }

  input:focus {
    outline: none;
    border-color: #3245ff;
    box-shadow: 0 0 0 3px rgba(50, 69, 255, 0.25);
  }

  button {
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    color: white;
    border: none;
    padding: 12px 18px;
    font-size: 16px;
    font-weight: 500;
    border-radius: 10px;
    cursor: pointer;
    white-space: nowrap;
    transition:
      opacity 0.2s,
      transform 0.1s;
  }

  button:hover:not(:disabled) {
    opacity: 0.9;
    transform: scale(1.02);
  }

  button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* --- Responsivo --- */
  @media (max-width: 600px) {
    .input-group {
      flex-direction: column;
      align-items: stretch;
    }

    button {
      width: 100%;
    }
  }
</style>
